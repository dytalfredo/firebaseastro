---
// Component Imports
import "@fontsource/abril-fatface";
import { Icon } from "astro-icon/components";
---

<nav class="bg-white border-gray-200 py-2.5 dark:bg-white">
    <div
        class="flex flex-wrap items-center justify-between max-w-screen-xl px-4 mx-auto"
    >
        <a href="/" class="flex items-center">
            <span
                class="self-center text-xl font-semibold text-lime-900 whitespace-nowrap logotext tracking-wider max-md:text-xl"
                >Latam Study Visa</span
            >
        </a>
        <div class="flex items-center lg:order-2">
            <div class="hidden mt-2 mr-4 sm:inline-block">
                <span></span>
            </div>

            <a
                href="https://wa.link/5sygk4"
                target="_blank"
                rel="noreferrer"
                class="text-white bg-amber-900 hover:bg-amber-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-full text-sm px-2 lg:px-5 lg:py-1 sm:mr-2 lg:mr-0 dark:bg-amber-800 dark:hover:bg-amber-700 focus:outline-none dark:focus:ring-amber-800"
                >Ayuda</a
            >
            <button
                data-collapse-toggle="mobile-menu-2"
                type="button"
                class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-emerald-700 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                aria-controls="mobile-menu-2"
                aria-expanded="true"
            >
                <span class="sr-only">Abrir Menu</span>
                <svg
                    class="w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        fill-rule="evenodd"
                        d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                        clip-rule="evenodd"></path>
                </svg>
                <svg
                    class="hidden w-6 h-6"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        fill-rule="evenodd"
                        d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                        clip-rule="evenodd"></path>
                </svg>
            </button>
        </div>
        <div
            class="items-center justify-between w-full lg:flex lg:w-auto lg:order-1"
            id="mobile-menu-2"
        >
            <ul
                class="flex flex-col mt-4 lg:flex-row lg:space-x-8 lg:mt-0 font-semibold"
            >
                <li>
                    <a
                        href="#"
                        class="block py-2 pl-3 pr-4 text-emerald-900 bg-amber-700 rounded lg:bg-transparent lg:text-purple-700 lg:p-0 dark:text-emerald-900"
                        aria-current="page">Sobre Nosotros</a
                    >
                </li>
                <li>
                    <a
                        href="#"
                        class="block py-2 pl-3 pr-4 text-emerald-700 border-b border-gray-100 lg:hover:bg-transparent lg:border-0 lg:hover:text-purple-700 lg:p-0 dark:text-emerald-700 lg:dark:hover:text-emerald-900 dark:hover:bg-gray-700 dark:hover:text-emerald-900 lg:dark:hover:bg-transparent dark:border-gray-700"
                        >Destinos</a
                    >
                </li>
                <li>
                    <a
                        href="#"
                        class="block py-2 pl-3 pr-4 text-emerald-900 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-purple-700 lg:p-0 dark:text-emerald-700 lg:dark:hover:text-emerald-900 dark:hover:bg-gray-700 dark:hover:text-emerald-900 lg:dark:hover:bg-transparent dark:border-gray-700"
                        >Testimonios</a
                    >
                </li>
                <li>
                    <a
                        href="#"
                        class="block py-2 pl-3 pr-4 text-emerald-900 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-purple-700 lg:p-0 dark:text-emerald-700 lg:dark:hover:text-emerald-900 dark:hover:bg-gray-700 dark:hover:text-emerald-900 lg:dark:hover:bg-transparent dark:border-gray-700"
                        >Contactos</a
                    >
                </li>
            </ul>
        </div>
    </div>
</nav>

<style>
    span {
        font-family: "Abril Fatface", system-ui;
    }
    .logotext {
    }
</style>
